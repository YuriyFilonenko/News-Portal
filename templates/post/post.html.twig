{% extends 'base.html.twig' %}

{% block title %} {{ post.title }} {% endblock %}

{% block main %}
    <div class="container">

        <div class="row">

            <!-- Post Content Column -->
            <div class="col-lg-8">

                <!-- Title -->
                <h1 class="mt-4">{{ post.title }}</h1>

                <!-- Category -->
                <p class="lead">
                    Category:
                    <a href="{{ path('posts_by_category', {'categoryId':post.category.id}) }}">
                        {{ post.category.title }}
                    </a>
                </p>

                <hr>

                <!-- Date/Time -->
                <p>Posted: {{ post.createdAt|date('d/m/Y h:i') }}</p>

                <hr>

                <!-- Preview Image -->
                <img class="img-fluid rounded" src="/img/{{ post.image }}">

                <hr>

                <!-- Post Content -->
                <p class="lead">{{ post.body }}</p>

            </div>
        </div>
    </div>

{% endblock %}

    
